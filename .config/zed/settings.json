// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "inlay_hints": {
    "enabled": true
  },
  "preferred_line_length": 80,
  "tab_size": 4,
  "toolbar": {
    "agent_review": false,
    "code_actions": false,
    "selections_menu": true,
    "quick_actions": false,
    "breadcrumbs": true
  },
  "minimap": {
    "thumb": "always",
    "show": "auto"
  },
  "relative_line_numbers": true,
  "gutter": {
    "min_line_number_digits": 3,
    "breakpoints": false,
    "line_numbers": true
  },
  "autoscroll_on_clicks": false,
  "prettier": {
    "allowed": true
  },
  "notification_panel": {
    "default_width": 300.0
  },
  "terminal": {
    "dock": "bottom"
  },
  "active_pane_modifiers": {
    "inactive_opacity": 1.0
  },
  "use_system_window_tabs": false,
  "centered_layout": {
    "left_padding": 0.19999998807907104
  },
  "bottom_dock_layout": "full",
  "preview_tabs": {
    "enable_preview_from_file_finder": false
  },
  "tabs": {
    "show_close_button": "hover",
    "activate_on_close": "left_neighbour",
    "close_position": "left",
    "file_icons": true,
    "git_status": false
  },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show": true
  },
  "title_bar": {
    "show_menus": false,
    "show_sign_in": true,
    "show_user_picture": true,
    "show_onboarding_banner": false,
    "show_project_items": true,
    "show_branch_icon": false
  },
  "diagnostics": {
    "inline": {
      "enabled": true
    },
    "button": true
  },
  "search": {
    "regex": true,
    "button": false
  },
  "debugger": {
    "button": false
  },
  "project_panel": {
    "hide_hidden": false,
    "hide_root": true,
    "auto_reveal_entries": false,
    "file_icons": true,
    "entry_spacing": "comfortable",
    "hide_gitignore": false,
    "dock": "right",
    "button": true
  },
  "status_bar": {
    "active_language_button": true,
    "cursor_position_button": false
  },
  "telemetry": {
    "diagnostics": true,
    "metrics": false
  },
  "cursor_blink": true,
  "ui_font_family": "Noto Sans",
  "buffer_font_family": "Maple Mono",
  "agent": {
    "button": false,
    "default_model": {
      "provider": "zed.dev",
      "model": "gpt-5"
    },
    "model_parameters": []
  },
  "edit_predictions": {
    "mode": "subtle"
  },
  "vim_mode": true,
  "features": {
    "edit_prediction_provider": "zed"
  },
  "ui_font_size": 16.0,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Nord Dark"
  },
  "format_on_save": "off"
}
